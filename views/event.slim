li class=["large-4", "columns"]
	figure.picture-holder
		img src="https://boletia.com/assets/icons/event-placeholder.svg"
		a href="event/info/#{event.id}"
	div.event-content
		span.city #{event.city}
		h2
			a href="event/info/#{event.id}" #{event.name.capitalize}
		ul
			li
				span class=["icon", "ss-pika", "ssp-calendar"]
				span #{event.date}
			li
				span class=["icon", "ssp-pika", "ssp-location"]
				span #{event.place}

  	a class=["trk-buy", "event-action"] href="event/new-booking/#{event.id}" Comprar boletos